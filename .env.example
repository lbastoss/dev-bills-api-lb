
########################################
# CONFIGURAÇÃO DO SERVIDOR
########################################
# Porta do servidor
PORT=3000
DATABASE_URL= 
# Ambiente: development | production | test
NODE_ENV=development

########################################
# BANCO DE DADOS (PostgreSQL)
########################################
DB_HOST=localhost
DB_PORT=5432
DB_USER=usuario
DB_PASSWORD=senha
DB_NAME=nome_do_banco

########################################
# AUTENTICAÇÃO E SEGURANÇA
########################################
# Chave secreta para JWT
JWT_SECRET=sua_chave_secreta
# Tempo de expiração do token (ex: 1d, 12h)
JWT_EXPIRES_IN=1d
# Sal para hashing de senhas (ex: bcrypt)
BCRYPT_SALT_ROUNDS=10

########################################
# CACHE / FILA (Redis)
########################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=senha_redis

########################################
# SERVIÇOS EXTERNOS
########################################
# API externa de exemplo
API_KEY_SERVICO_X=chave_aqui
API_URL_SERVICO_X=https://api.servicox.com

# E-mail (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=usuario@example.com
EMAIL_PASS=senha_aqui
EMAIL_FROM=nao-responda@example.com

########################################
# OUTRAS VARIÁVEIS
########################################
# URL base da aplicação (útil em e-mails ou redirecionamentos)
APP_URL=http://localhost:3000
# Flag para habilitar logs detalhados
ENABLE_DEBUG=true
